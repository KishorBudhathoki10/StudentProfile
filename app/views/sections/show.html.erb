<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<%= link_to("<< Back To Grade", grade_path(@grade_id) ) %>

<h2><%= @section.name %></h2>

<%= link_to('Create New Student', "/grades/#{@grade_id}/sections/#{@id}/students/new") %>


<h4>Students:</h4>

<% @students.each do |student| %>
  <p><%= link_to(student.name, "/grades/#{@grade_id}/sections/#{@id}/students/#{student.id}") %></p>
<% end %>